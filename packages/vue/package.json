{
  "name": "@foormjs/vue",
  "version": "0.2.4",
  "description": "@foormjs/vue",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "customBuild": true,
  "exports": {
    "./package.json": "./package.json",
    "./styles": "./dist/style.css",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foormjs/foormjs.git",
    "directory": "packages/vue"
  },
  "keywords": [
    "foorm",
    "foormjs",
    "forms",
    "validations"
  ],
  "author": "Artem Maltsev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/foormjs/foormjs/issues"
  },
  "homepage": "https://github.com/foormjs/foormjs/tree/main/packages/vue#readme",
  "scripts": {
    "dev": "vite",
    "build": "run-s type-check build-only",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "pub": "pnpm publish --access public --no-git-checks",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@foormjs/atscript": "workspace:^",
    "@foormjs/composables": "workspace:^"
  },
  "peerDependencies": {
    "@atscript/core": "^0.1.18",
    "@atscript/typescript": "^0.1.18",
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@atscript/core": "^0.1.18",
    "@atscript/typescript": "^0.1.18",
    "@playwright/test": "^1.58.2",
    "vue": "^3.5.28",
    "@tsconfig/node20": "^20.1.9",
    "@types/node": "^22.15.33",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vue/tsconfig": "^0.8.1",
    "npm-run-all2": "^8.0.4",
    "typescript": "~5.9.3",
    "unplugin-atscript": "^0.1.18",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vue-tsc": "^3.2.4"
  }
}
