{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "../atscript/src/**/*",
    "../composables/src/index.ts",
    "../composables/src/types.ts",
    "../composables/src/composables/**/*"
  ],
  "exclude": ["src/**/__tests__/*", "node_modules", "../atscript/src/**/*.spec.ts"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "skipLibCheck": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolvePackageJsonExports": true,
    "resolvePackageJsonImports": true,
    "paths": {
      "@/*": ["./src/*"],
      "@foormjs/atscript": ["../atscript/src"],
      "@foormjs/composables": ["../composables/src"]
    }
  }
}
