{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "../foorm/src/**/*", "../atscript/src/**/*"],
  "exclude": [
    "src/**/__tests__/*",
    "node_modules",
    "../foorm/src/**/*.spec.ts",
    "../atscript/src/**/*.spec.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "foorm": ["../foorm/src"],
      "@foormjs/*": ["../*/src"]
    }
  }
}
