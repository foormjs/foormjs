{
  "name": "@foormjs/composables",
  "version": "0.2.4",
  "description": "Framework-agnostic form composables with validation",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "customBuild": true,
  "bin": {
    "setup-skills": "./scripts/setup-skills.js"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "skills",
    "scripts/setup-skills.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foormjs/foormjs.git",
    "directory": "packages/composables"
  },
  "author": "Artem Maltsev",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "run-s type-check build-only",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "pub": "pnpm publish --access public --no-git-checks",
    "setup-skills": "node ./scripts/setup-skills.js"
  },
  "peerDependencies": {
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "vue": "^3.5.28",
    "@tsconfig/node20": "^20.1.9",
    "@types/node": "^22.15.33",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vue/tsconfig": "^0.8.1",
    "npm-run-all2": "^8.0.4",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18",
    "vue-tsc": "^3.2.4"
  }
}
