{
  "name": "foormjs",
  "private": true,
  "version": "0.2.3",
  "description": "Backend-driven dynamic forms with dual-end validation for seamless data collection",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "bootstrap": "node ./scripts/bootstrap",
    "build": "node ./scripts/build",
    "release": "node ./scripts/release",
    "test": "vitest run && pnpm -F @foormjs/vue test:e2e",
    "test:cov": "vitest run --coverage",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "check": "pnpm lint && pnpm format:check",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "docs": "vitepress dev docs",
    "docs-build": "vitepress build docs",
    "docs-serve": "vitepress serve docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foormjs/foormjs.git"
  },
  "gitHooks": {
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "keywords": [
    "forms",
    "validations",
    "foorm"
  ],
  "author": "Artem Maltsev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/foormjs/foormjs/issues"
  },
  "homepage": "https://github.com/foormjs/foormjs#readme",
  "devDependencies": {
    "@prostojs/dye": "^0.3.0",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-replace": "^5.0.7",
    "@types/node": "^22.19.11",
    "conventional-changelog": "^3.1.25",
    "conventional-changelog-cli": "^2.2.2",
    "enquirer": "^2.4.1",
    "execa": "^5.1.1",
    "minimist": "^1.2.8",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.48.0",
    "rollup": "^4.57.1",
    "rollup-plugin-dts": "^6.3.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "semver": "^7.7.4",
    "tslib": "^2.8.1",
    "typescript": "~5.3.3",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.18",
    "yorkie": "^2.0.0"
  }
}
